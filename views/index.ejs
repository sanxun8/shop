<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
  <style>
    /* Banner Section */
    .banner {
      width: 100%;
      height: 400px;
      background: url("/img/baner-1.jpg") no-repeat center center;
      background-size: cover;
      margin-top: 64px; /* Adjust for fixed navbar height */
    }

    /* Content Sections */
    .content {
      padding: 20px;
      margin-top: 20px; /* Adjust based on banner height */
    }

    .category-container,
    .popular-products {
      max-width: 1200px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .category-container h2,
    .popular-products h2 {
      margin: 0 0 20px;
      font-size: 28px;
      text-align: center;
    }

    .category-list,
    .product-list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .category-item,
    .product-item {
      flex: 1 1 calc(25% - 20px);
      box-sizing: border-box;
      text-align: center;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      background-color: #fff;
    }

    .category-item img,
    .product-item img {
      width: 100%;
      height: auto;
    }

    .category-item h3,
    .product-item h3 {
      margin: 10px 0;
      font-size: 18px;
    }

    .product-item p {
      color: #888;
    }
  </style>
  <body>
    <%- include('partials/nav.ejs') %>
    <!-- Banner Section -->
    <div class="banner"></div>

    <!-- Content Sections -->
    <div class="content">
      <!-- Category Section -->
      <div class="category-container">
        <h2>购物分类</h2>
        <div class="category-list">
          <div class="category-item">
            <a href="/products?category=electronics">
              <img src="/img/category-electronics.jpg" alt="Electronics" />
              <h3>电子产品</h3>
            </a>
          </div>
          <div class="category-item">
            <a href="/products?category=fashion">
              <img src="/img/category-fashion.jpg" alt="Fashion" />
              <h3>时尚</h3>
            </a>
          </div>
          <div class="category-item">
            <a href="/products?category=kitchen">
              <img src="/img/category-kitchen.jpg" alt="Kitchen" />
              <h3>厨房</h3>
            </a>
          </div>
          <div class="category-item">
            <a href="/products?category=beauty">
              <img src="/img/category-beauty.jpg" alt="Beauty" />
              <h3>美丽</h3>
            </a>
          </div>
        </div>
      </div>

      <!-- Popular Products Section -->
      <div class="popular-products">
        <h2>受欢迎的产品</h2>
        <div class="product-list">
          <% hotProducts.forEach(item => { %>
          <a class="product-item" href="/products/<%= item.id %>">
            <img src="<%= item.img %>" alt="<%= item.title %>" />
            <h3><%= item.title %></h3>
            <p>￥<%= item.price %></p>
          </a>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>
