<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>评价管理</title>
    <style>
      /* General Styles */
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
      }

      /* Container */
      .container {
        width: 100%;
        max-width: 1000px;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      /* Heading */
      h1 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
      }

      /* Review List */
      .review-list {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }

      .review-list th,
      .review-list td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
      }

      .review-list th {
        background-color: #f8f8f8;
      }

      .review-list .item-image img {
        width: 50px;
        height: auto;
        border-radius: 4px;
      }

      .review-list .review-actions button {
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        background-color: #3498db;
        color: #fff;
        cursor: pointer;
        margin-right: 5px;
      }

      .review-list .review-actions button:hover {
        background-color: #2980b9;
      }

      /* Edit Review Modal */
      .modal {
        display: none;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
      }

      .modal-content {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 400px;
      }

      .modal-content h2 {
        margin-top: 0;
      }

      .modal-content textarea {
        width: 100%;
        height: 100px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
      }

      .modal-content button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        background-color: #3498db;
        color: #fff;
        cursor: pointer;
        margin-top: 10px;
      }

      .modal-content button:hover {
        background-color: #2980b9;
      }

      .modal-content .close {
        background-color: #e74c3c;
      }

      .modal-content .close:hover {
        background-color: #c0392b;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>评价管理</h1>

      <!-- Reviews List -->
      <table class="review-list">
        <thead>
          <tr>
            <th>商品图片</th>
            <th>商品名称</th>
            <th>评价内容</th>
            <th>评分</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="item-image">
              <img src="https://via.placeholder.com/50" alt="Product Image" />
            </td>
            <td>商品 1</td>
            <td>这是一个很好的商品！</td>
            <td>★★★★★</td>
            <td class="review-actions">
              <button class="edit-review" data-id="1">编辑</button>
              <button class="delete-review" data-id="1">删除</button>
            </td>
          </tr>
          <tr>
            <td class="item-image">
              <img src="https://via.placeholder.com/50" alt="Product Image" />
            </td>
            <td>商品 2</td>
            <td>商品的质量一般。</td>
            <td>★★★☆☆</td>
            <td class="review-actions">
              <button class="edit-review" data-id="2">编辑</button>
              <button class="delete-review" data-id="2">删除</button>
            </td>
          </tr>
          <!-- Add more reviews as needed -->
        </tbody>
      </table>
    </div>

    <!-- Edit Review Modal -->
    <div class="modal" id="edit-modal">
      <div class="modal-content">
        <h2>编辑评价</h2>
        <textarea id="review-content" placeholder="输入新的评价内容"></textarea>
        <button id="save-review">保存</button>
        <button class="close">关闭</button>
      </div>
    </div>

    <script>
      // JavaScript for handling review editing and deletion
      document.querySelectorAll(".edit-review").forEach((button) => {
        button.addEventListener("click", function () {
          const reviewId = this.getAttribute("data-id");
          const modal = document.getElementById("edit-modal");
          const reviewContent = document.getElementById("review-content");

          // Simulate fetching existing review content
          reviewContent.value = "这是一个很好的商品！"; // Replace with actual content

          modal.style.display = "flex";
          document
            .getElementById("save-review")
            .setAttribute("data-id", reviewId);
        });
      });

      document.querySelectorAll(".delete-review").forEach((button) => {
        button.addEventListener("click", function () {
          if (confirm("确定要删除此评价吗？")) {
            this.closest("tr").remove();
          }
        });
      });

      document
        .querySelector(".modal .close")
        .addEventListener("click", function () {
          document.getElementById("edit-modal").style.display = "none";
        });

      document
        .getElementById("save-review")
        .addEventListener("click", function () {
          const reviewId = this.getAttribute("data-id");
          const updatedContent =
            document.getElementById("review-content").value;

          // Simulate saving updated review content
          alert(`评价 #${reviewId} 的内容已更新为: "${updatedContent}"`);
          document.getElementById("edit-modal").style.display = "none";
        });
    </script>
  </body>
</html>
